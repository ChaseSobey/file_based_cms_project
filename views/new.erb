<form method="post" action="/create">
  <label for="content">Add a new document:</label>
  <div>
    <textarea name="filename" id="filename" rows="1" cols="20"></textarea>
  </div>
  <button type="submit">Create</button>
</form>

<p> <%= params[:filename] %></p>
<p> <%= params[:filename].to_s.split('.').last %></p>